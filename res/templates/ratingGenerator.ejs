<%
    roundedRating = null;
    if (typeof x != 'undefined') { // We've been giving a review, give the rating for that
        roundedRating = reviewData[x].reviewRating;
    } else if (postData.roundedRating != null && typeof postData.roundedRating != 'undefined') { // We've been given a post, give the rating for that
        roundedRating = postData.roundedRating;
    } 
%> 
<span class="star-count <% if (roundedRating == null) { %> no-star-count <% } %>">
    <% var i = 1; while (i <= Math.floor(roundedRating)) { %>
        <i class="fas fa-star"></i>
    <% i++; } i -= 1;%>

    <% if (roundedRating - i == 0.5) { %>
        <i class="fas fa-star-half-alt"></i>
    <% i++; } %>

    <% while (i < 5) { %>
        <i class="far fa-star"></i>
    <% i++; } %>
</span>